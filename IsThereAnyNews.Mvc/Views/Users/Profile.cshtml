@model IsThereAnyNews.Services.Implementation.UserDetailedPublicProfileViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2><i class="fa fa-user"></i>@Model.DisplayName</h2>
        <h3><i class="fa fa-rss"></i>Channels: @Model.ChannelsCount</h3>
        <div class="row">
            @foreach (var channel in Model.Channels)
            {
                <div class="col-lg-9"><i class="fa fa-rss-square"></i>@channel.Name</div>
            }
        </div>
    </div>
</div>