<div class="col s12">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col s6">
                <label for="name">your name</label>
                <input placeholder="So we know how to address you" id="name" type="text" class="validate">
            </div>
            <div class="col s6">
                <label for="name">email</label>
                <input placeholder="Your email so we can reply" id="email" type="email" class="validate">
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <label for="topic">topic</label>
                <input placeholder="Topic" id="topic" type="text" class="validate">
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <label for="Message">Message</label>
                <textarea placeholder="Message" id="Message" type="text" class="validate materialize-textarea"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col push-s11 s1">
                <button class="btn" name="submit" value="administration">send</button>
            </div>
        </div>
    }
</div>