@model IsThereAnyNews.ViewModels.RssSubscriptionIndexViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            @Html.Action("MyChannelList", "RssChannel")
        </div>
        <div class="col-lg-9">
            <div class="row col-lg-12">
                <span>
                    <h2>@Model.ChannelInformation.Title</h2>
                    <h3>@Model.ChannelInformation.Created</h3>
                </span>
            </div>
            <div class="row col-lg-12">
                @foreach (var entry in Model.RssEntryToReadViewModels)
                {
                    <div class="row">
                        <div class="row col-lg-12">
                            <h4>
                                @entry.RssEntryViewModel.Title
                                <span class="small pull-right">@entry.RssEntryViewModel.PublicationDate</span>
                            </h4>
                            @Html.Raw(entry.RssEntryViewModel.PreviewText)
                        </div>
                        <div class="row col-lg-12">
                            @Html.Partial("_RssItemAction", entry)
                        </div>
                    </div>
                    <hr/>
                }
            </div>
            <div class="row col-lg-12">
                @using (Html.BeginForm("MarkRead", "Stream", FormMethod.Post))
                {
                    <input type="hidden" name="StreamType" value="@Model.StreamType" />
                    <input type="hidden" name="Id" value="@Model.SubscriptionId" />
                    <input type="hidden" name="DisplayedItems" value="@Model.DisplayedRss" />
                    <input type="submit" role="button" class="btn btn-default" value="mark all as read" />
                }
            </div>
        </div>
    </div>
   
</div>
