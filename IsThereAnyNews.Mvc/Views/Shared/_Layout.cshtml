<!DOCTYPE html>
<html ng-app="itan">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materialize/sass/materialize.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular-1.5.8/angular.js"></script>
    <link href="~/Content/IsThereAnyNews.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.5.0/scss/font-awesome.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/icon.gif" type="image/x-icon" />
    <script>
        var m = angular.module("itan", []);
    </script>

</head>
<body>
    <header>
        <div class="navbar-fixed">
            <ul id="dropdown1" class="dropdown-content">
                <li>@Html.ActionLink("Logout", "Index", "Logout")</li>
                <li>@Html.ActionLink("Settings", "Index", "Account")</li>
            </ul>
            <nav>
                <div class="nav-wrapper">
                    <a href="/" class="brand-logo">ITAN</a>
                    <ul class="right">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Browse", "Index", "RssChannel")</li>
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>@Html.ActionLink("Statistics", "Index", "Statistics")</li>
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li>@Html.ActionLink("My channels", "My", "RssChannel")</li>
                            <li>@Html.ActionLink("Import", "Index", "OpmlImporter")</li>
                            <li>
                                <span>
                                    <img class="material-icons" src="https://graph.facebook.com/10205806873714010/picture" />
                                </span>
                                <a class="dropdown-button"
                                   href="#"
                                   data-activates="dropdown1">
                                    Account
                                    <i class="material-icons right">arrow_drop_down</i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li> @Html.ActionLink("Login", "Index", "Login") </li>
                        }
                        <li>@Html.ActionLink("Tests", "Index", "Test")</li>
                        <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>

</html>
