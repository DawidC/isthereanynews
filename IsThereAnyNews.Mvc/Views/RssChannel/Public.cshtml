@model IsThereAnyNews.ViewModels.RssChannelIndexViewModel
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-4">
        @Html.Action("PublicChannels")
    </div>
    <div class="col-lg-8">
        <div class="row">
            <h2>title</h2>
            <p>@Model.Name</p>
            <p>@Model.Added</p>
        </div>
        <div class="row">
            @if (Model.IsAuthenticatedUser)
            {
                if (Model.SubscriptionInfo.IsSubscribed)
                {
                    <button role="button"
                            class="btn-xs btn-error nocss-unsubscribe"
                            data-unsubscribe-url="@Url.Action("Unsubscribe", new { id = Model.SubscriptionInfo.ChannelSubscriptionId })">
                        unsubscribe
                    </button>
                }
                else
                {
                    <button role="button"
                            class="btn-xs btn-error nocss-subscribe"
                            data-subscribe-url="@Url.Action("Subscribe", new { id = Model.ChannelId })">
                        subscribe
                    </button>
                }
            }
        </div>

        <div class="row">
            <div class="col-lg-12">
                @foreach (var entry in Model.Entries)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row text-success">
                                <span>@entry.Title</span>
                                <span>@entry.PublicationDate</span>
                                <span role="button"
                                      data-toggle="collapse"
                                      href="#rss-@entry.Id"
                                      class="glyphicon glyphicon-plus-sign nocss-view-rss-entry">
                                </span>
                            </div>
                            <div class="row collapse" id="rss-@entry.Id">
                                <div>@Html.Raw(entry.PreviewText)</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
